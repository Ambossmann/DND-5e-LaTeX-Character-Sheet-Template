{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekly"
    ],
    "packageRules": [
      {
        "matchDepTypes": [
          "*"
        ],
        "matchUpdateTypes": [
          "patch",
          "minor"
        ],
        "groupName": "Dependencies (non-major)"
      }
    ]
  },
  "nix": {
    "enabled": true
  }
}
